<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/li_user_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/li_user_iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/person"/>

        <TextView
            android:id="@+id/li_user_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/li_user_iv_avatar"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            tools:text="Name"
            />

        <TextView
            android:id="@+id/li_user_tv_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li_user_tv_name"
            android:layout_toRightOf="@+id/li_user_iv_avatar"
            android:padding="2dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            tools:text="Lastname"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>
